;; opengl-glew.setup -*- scheme -*-

(use make)

(include "gl-translator")

(define gl-client
  (cond-expand
    (arm "-Dgles")
    (else "-lGLEW")))

(define header
  (cond-expand
    ((or gles arm) "gles.h")
    (else "glcorearb.h")))

(define compile-options
  (cond-expand
    (macosx "-FOpenGL")
    (else "")))

(define link-options
  (cond-expand
    (macosx "-framework OpenGL")
    (windows "-lopengl32")
    ((or gles arm) "-lGLESv2")
    (else "-lGL")))

(print "Translating " header)
(gl-translate header)
(compile -s -O3 -d0 opengl-glew.scm ,compile-options ,link-options ,gl-client -J)
(compile -s -O3 -d0 opengl-glew.import.scm)

(install-extension
 'opengl-glew
 '("opengl-glew.so" "opengl-glew.import.so")
 '((version "0.8.0")))
